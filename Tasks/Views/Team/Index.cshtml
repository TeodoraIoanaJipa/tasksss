
@{
    ViewBag.Title = "Index";
}
@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.message
    </div>

}
@foreach (var team in ViewBag.Teams)
{
    <h3><a href="/Team/Show/@team.TeamId">@team.Name</a></h3>
    <input type="button" class="btn btn-outline-warning" value="Edit team" onclick="@("window.location.href='" + @Url.Action("/Edit/"+@team.TeamId,"Team") + "'");" />
    <br />
    <hr />
    <br />
}
<input type="button" class="btn btn-outline-info" value="Create new team" onclick="@("window.location.href='" + @Url.Action("/New","Team") + "'");" />


<br />
